extends layout.jade
block content
    include partials/header.jade
    .row
        .col-sm-6.cutomLogIn.well
            h1 Edit Profile
            .success_message
            form.form-group#editUser(action='/confirmm' method='post')
                input.form-control.input-modal(type="text" name='firstName' autofocus='autofocus')
                input.form-control.input-modal(type="text" placeholder='Enter Last Name' name='lastName')
                input.input-group.form-control.input-modal#emailToRegister(type="email" placeholder='Enter email' name='RegisterEmail')
                select.form-control.select-modal(placeholder='Select One' name='gender')
                    option Male
                    option Female
                input.form-control.input-modal(type="password" placeholder='Enter Password' name='password')
                input.form-control.input-modal(type="password" placeholder='Confirm Password' name='confirmPassword')
                input(type="checkbox", checked='checked' name='termCon')
                label.input-modal.terms-conditions I agree terms & conditions
                br
                button.btn.btn-primary#editUserButton(type='submit') Save
block scripts
    script(src='/js/controllers/editProfile.js')