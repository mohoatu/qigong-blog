extends layout

block content
    .row
        .col-sm-6.cutomLogIn.well
            a(href="/") Go Back
            h1 Registration
            .success_message
            form.form-group#registerUser(action='/registerUser' method='post')
                input.form-control.input-modal(type="text" placeholder='Enter First Name' name='firstName' autofocus='autofocus')
                input.form-control.input-modal(type="text" placeholder='Enter Last Name' name='lastName')
                input.input-group.form-control.input-modal#emailToRegister(type="email" placeholder='Enter email' name='emailUser')
                select.form-control.select-modal(placeholder='Select One' name='gender')
                    option Male
                    option Female
                input.form-control.input-modal(type="password" placeholder='Enter Password' name='password')
                h5.errorPass
                input.form-control.input-modal(type="password" placeholder='Confirm Password' name='confirmPassword')
                br
                button.btn.btn-primary(type='submit') Register
block scripts
